<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane styleClass="stack-pane" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <HBox>
      <TextField fx:id="commandTextField" onAction="#handleCommandEntered" promptText="➡ Please enter your command here..." HBox.hgrow="ALWAYS" />
      <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleCommandEntered" text="Send ▶">
        <padding>
          <Insets bottom="5" left="10" right="10" top="5" />
        </padding>
         <font>
            <Font name="Montserrat Medium" size="12.0" />
         </font>
      </Button>
    </HBox>
  </StackPane>
