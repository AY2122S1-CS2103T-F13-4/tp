@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant "e:EnrollLessonCommand" as EnrollLessonCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
participant "l1:Lesson" as Lesson MODEL_COLOR
participant "Alice:Student" as Student MODEL_COLOR
end box

mainframe **sd**  EnrollLessonCommand execution

LogicManager -> EnrollLessonCommand : execute()
activate EnrollLessonCommand

EnrollLessonCommand -> Lesson : removeStudent(2)
activate Lesson

Lesson -> Student : enroll(Alice)
activate Student

Student -> Lesson
deactivate Student

Lesson --> EnrollLessonCommand
deactivate Lesson

EnrollLessonCommand --> Model : setLesson(l1)
activate Model

Model --> EnrollLessonCommand
deactivate Model

create CommandResult
EnrollLessonCommand -> CommandResult
activate CommandResult

CommandResult --> EnrollLessonCommand
deactivate CommandResult

EnrollLessonCommand --> LogicManager : result
deactivate EnrollLessonCommand


@enduml
