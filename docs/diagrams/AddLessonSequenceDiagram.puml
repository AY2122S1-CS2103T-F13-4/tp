@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":TuitioneParser" as TuitioneParser LOGIC_COLOR
participant ":AddLessonCommandParser" as AddLessonCommandParser LOGIC_COLOR
participant "al:AddLessonCommand" as AddLessonCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
participant "l:Lesson" as Lesson MODEL_COLOR
end box

[-> LogicManager : execute("add-l s/Science g/P2 d/Wed t/1200 c/10.50")
activate LogicManager

LogicManager -> TuitioneParser : parseCommand("add-l s/Science g/P5 d/Wed t/1200 c/10.50")
activate TuitioneParser

create AddLessonCommandParser
TuitioneParser -> AddLessonCommandParser
activate AddLessonCommandParser

AddLessonCommandParser --> TuitioneParser
deactivate AddLessonCommandParser

TuitioneParser -> AddLessonCommandParser : parse("s/Science g/P5 d/Wed t/1200 c/10.50")
activate AddLessonCommandParser

create Lesson
AddLessonCommandParser -> Lesson
activate Lesson

Lesson --> AddLessonCommandParser : l
deactivate Lesson

create AddLessonCommand
AddLessonCommandParser -> AddLessonCommand
activate AddLessonCommand

AddLessonCommand --> AddLessonCommandParser : al
deactivate AddLessonCommand

AddLessonCommandParser --> TuitioneParser : al
deactivate AddLessonCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
AddLessonCommandParser -[hidden]-> TuitioneParser
destroy AddLessonCommandParser

TuitioneParser --> LogicManager : al
deactivate TuitioneParser

LogicManager -> AddLessonCommand : execute()
activate AddLessonCommand

AddLessonCommand -> Model : AddLesson()
activate Model

Model --> AddLessonCommand
deactivate Model

create CommandResult
AddLessonCommand -> CommandResult
activate CommandResult

CommandResult --> AddLessonCommand
deactivate CommandResult

AddLessonCommand --> LogicManager : result
deactivate AddLessonCommand

[<--LogicManager
deactivate LogicManager
@enduml
