@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":Logic\nManager" as LogicManager LOGIC_COLOR
participant ":Tuitione\nParser" as TuitioneParser LOGIC_COLOR
participant ":EnrollCommand\nParser" as EnrollCommandParser LOGIC_COLOR
participant "e:EnrollLesson\nCommand" as EnrollLessonCommand LOGIC_COLOR
participant ":Command\nResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
participant "l1\n:Lesson" as Lesson MODEL_COLOR
participant "Alice\n:Student" as Student MODEL_COLOR

end box

[-> LogicManager : execute\n("enroll 1 l/1")
activate LogicManager

LogicManager -> TuitioneParser : parseCommand\n("enroll 1 l/1")
activate TuitioneParser

create EnrollCommandParser
TuitioneParser -> EnrollCommandParser

activate EnrollCommandParser
EnrollCommandParser --> TuitioneParser
deactivate EnrollCommandParser

TuitioneParser -> EnrollCommandParser : parse("1 l/1")
activate EnrollCommandParser

create EnrollLessonCommand
EnrollCommandParser -> EnrollLessonCommand :
activate EnrollLessonCommand

EnrollLessonCommand --> EnrollCommandParser : e
deactivate EnrollLessonCommand

EnrollCommandParser --> TuitioneParser : e
deactivate EnrollCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
EnrollCommandParser -[hidden]-> TuitioneParser
destroy EnrollCommandParser

TuitioneParser --> LogicManager  : e
deactivate TuitioneParser

LogicManager -> EnrollLessonCommand : execute()
activate EnrollLessonCommand

EnrollLessonCommand -> Lesson : removeStudent(2)
activate Lesson

Lesson -> Student : enrollFrom\nLesson(Alice)
activate Student

Student -> Lesson
deactivate Student

Lesson --> EnrollLessonCommand
deactivate Lesson

EnrollLessonCommand --> Model : setNewLesson(l1)
activate Model

Model --> EnrollLessonCommand
deactivate Model

create CommandResult
EnrollLessonCommand -> CommandResult
activate CommandResult

CommandResult --> EnrollLessonCommand
deactivate CommandResult

EnrollLessonCommand --> LogicManager : result
deactivate EnrollLessonCommand

[<--LogicManager
deactivate LogicManager

@enduml
